{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@packages/*": ["src/packages/*"],
      "@components/*": ["src/components/*"],
      "@tools/*": ["src/tools/*"],
      "@constant/*": ["src/constant/*"],
      "@submodules/*": ["submodules/*"]
    },
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
